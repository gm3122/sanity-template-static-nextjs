{
  "name": "name",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "type-check": "tsc -b ./packages/next.js/tsconfig.json",
    "lint": "eslint . '.*.js' --fix --ignore-path .gitignore --ignore-pattern packages/next.js --ext .js,.jsx,.ts,.tsx",
    "lint:next": "yarn workspace next.js next lint",
    "lint-fix": "concurrently 'yarn lint --fix' 'yarn lint:next --fix'",
    "format": "prettier . '.husky/**/*' --write --ignore-path .gitignore",
    "start": "concurrently 'yarn workspace sanity dev' 'yarn workspace next.js dev' 'yarn workspace sanity start'",
    "build": "concurrently 'yarn workspace next.js build' 'yarn workspace sanity build'",
    "test": "jest --env=jsdom",
    "test:coverage": "jest --env=jsdom --coverage",
    "build-storybook": "build-storybook -o public",
    "storybook": "BROWSER=google-chrome start-storybook -p 6006"
  },
  "dependencies": {
    "concurrently": "^6.2.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.2.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^1.8.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.4",
    "prettier": "^2.4.1",
    "prettier-plugin-sh": "^0.7.1",
    "prettier-plugin-tsconfig": "^0.0.1",
    "sort-package-json": "^1.52.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "vercel": "^23.1.2"
  }
}
