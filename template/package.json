{
  "name": "carre-films",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "type-check": "tsc -b ./packages/next.js/tsconfig.json",
    "lint": "eslint . '.*.js' --fix --ignore-path .gitignore --ignore-pattern packages/next.js --ext .js,.jsx,.ts,.tsx",
    "lint:next": "yarn workspace next.js next lint",
    "lint-fix": "concurrently 'yarn lint --fix' 'yarn lint:next --fix'",
    "format": "prettier . '.husky/**/*' --write --ignore-path .gitignore",
    "start": "concurrently 'yarn workspace sanity dev' 'yarn workspace next.js dev' 'yarn workspace sanity start'",
    "build": "concurrently 'yarn workspace sanity codegen' 'yarn workspace next.js build' 'yarn workspace sanity build'",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-jest": "^27.1.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.7.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "lodash": "^4.17.21",
    "micromatch": "^4.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-packagejson": "^2.2.11",
    "prettier-plugin-sh": "^0.7.1",
    "prettier-plugin-tsconfig": "^0.0.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.4",
    "vercel": "^23.0.1"
  }
}
