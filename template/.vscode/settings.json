{
  "files.exclude": {
    "**/.git": true,
    "**/.directory": true
  },
  "search.exclude": {
    "**/.cache": true,
    "**/node_modules": true,
    "**/public": true,
    "**/build": true,
    "**/*.lock": true,
    "**/package-lock.json": true,
    "**/coverage": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "settings.cycle": [
    {
      "id": "exclude",
      "overrideWorkspaceSettings": true,
      "values": [
        {
          "files.exclude": {
            "**/.git": true,
            "**/.directory": true
          }
        },
        {
          "files.exclude": {
            "**/.*": true,
            "**/*.lock": true,
            "**/node_modules": true,
            "**/public": true,
            "**/build": true,
            "**/__mocks__": true,
            "**/__snapshots__": true,
            "**/coverage": true,
            "**/babel*.js": true,
            "**/jest*.{j,t}s": true,
            "**/loadershim.js": true,
            "**/[dD]ocker*": true,
            "**/Makefile": true,
            "**/netlify.toml": true,
            "**/lint-staged*": true,
            "**/tsconfig.tsbuildinfo": true,
            "**/lighthouserc.js": true,
            "**/vercel.json": true
          }
        }
      ]
    }
  ]
}
