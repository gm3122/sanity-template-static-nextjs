{
  "files.exclude": {
    "**/.git": true
  },
  "search.exclude": {
    "**/.cache": true,
    "**/node_modules": true,
    "**/public": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "settings.cycle": [
    {
      "id": "exclude",
      "overrideWorkspaceSettings": true,
      "values": [
        {
          "files.exclude": {
            "**/.git": true
          }
        },
        {
          "files.exclude": {
            "**/.*": true,
            "**/node_modules": true,
            "**/public": true,
            "**/__mocks__": true,
            "jest*.js": true,
            "loadershim.js": true,
            "[dD]ocker*": true,
            "Makefile": true,
            "netlify.toml": true,
            "lint-staged*": true,
            "**/tsconfig.tsbuildinfo": true,
            "lighthouserc.js": true,
            "vercel.json": true
          }
        }
      ]
    }
  ]
}
